{
  "name": "ivory-services",
  "version": "0.2.1",
  "description": "GOV.UK REST API service for the Ivory service",
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DEFRA/ivory-services/issues"
  },
  "homepage": "https://github.com/DEFRA/ivory-services#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/ivory-services.git"
  },
  "engines": {
    "node": "14.x"
  },
  "main": "index.js",
  "scripts": {
    "docker:build": "docker build --no-cache -t ivory/ivory-services .",
    "docker:run": "docker run -p \"3010:3010\" --env-file .env ivory/ivory-services",
    "lint": "standard",
    "start": "node index.js",
    "unit-test": "lab -c -r console -o stdout -r lcov -o lcov.info",
    "test": "npm run lint && npm run unit-test"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.1.0",
    "hapi-pino": "^8.3.0",
    "joi": "^17.4.0"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^24.1.1",
    "blipp": "^4.0.2",
    "codeclimate-test-reporter": "^0.5.1",
    "standard": "^16.0.3"
  }
}
